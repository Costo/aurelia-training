{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "/src",
    "sourceMap": true,
    "target": "es5",
    "module": "amd",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true
  },
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}